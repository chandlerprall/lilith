{
  "compilerOptions": {
    "outDir": "build",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ESNext",

    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,

    "jsx": "react-jsx",
    "jsxImportSource": "@venajs"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}